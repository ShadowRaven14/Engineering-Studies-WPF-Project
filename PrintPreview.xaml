<Window x:Class="WPF___Projekt.PrintPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF___Projekt"
        mc:Ignorable="d"
        Title="Podgląd drukowania listy" Height="1100" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="PrintOrderButton" Content="Drukuj" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" Height="40" Width="110" Click="PrintClick"/>
        <Grid Grid.Column="1" Grid.Row="0" Name="Lista" HorizontalAlignment="Stretch" Height="Auto" Margin="0,0,10,0" >
            <ListBox FontFamily="Consolas" FontSize="14" HorizontalAlignment="Stretch" SelectionMode="Single" Name="previewList" Padding="50,50,0,0" Margin="0,10,0,10"/>
        </Grid>
    </Grid>
</Window>
